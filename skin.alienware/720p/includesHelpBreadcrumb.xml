            </control>
            <control type="label">
                <font>goodtime12</font>
                <label>$LOCALIZE[31608] > $LOCALIZE[31800] > $LOCALIZE[31812]</label> <!-- Help > Hotkeys > Full Screen -->
                <visible>Control.HasFocus(9011) + Container(9011).Position(2)</visible>
            </control>
            <control type="label">
                <font>goodtime12</font>
                <label>$LOCALIZE[31608] > $LOCALIZE[31800] > $LOCALIZE[31813]</label> <!-- Help > Hotkeys > Controller Mouse -->
                <visible>Control.HasFocus(9011) + Container(9011).Position(3)</visible>
            </control>
        </control>
    </include>
